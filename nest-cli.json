{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "views/templates/**/*",
        "watchAssets": true
      },
      {
        "include": "lang/**/*",
        "watchAssets": true
      }
    ],
    "deleteOutDir": true,
    "watchAssets": true
  }
}